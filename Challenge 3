//code using if else
import java.util.Scanner;
  public class Scenario{
    public void IntergerValue(){
 Scanner scanner = new Scanner(System.in);
 System.out.print("Enter interger value:");
 int x = scanner.nextInt();
  if (x==0 || x < 0){
    System.out.println("Enter a proper interger value");
  }
  else{
System.out.println("You have entered:" + x);

  }
  scanner.close();
    }
  public static void main(String[] args) {
    Scenario y = new Scenario();
    y.IntergerValue();
  }
}

